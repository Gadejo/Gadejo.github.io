{
  "name": "ADHD Learning RPG - Professional",
  "short_name": "ADHD RPG",
  "description": "A gamified learning platform designed for ADHD minds - turn studying into an epic adventure! Track progress, unlock achievements, and level up your knowledge.",
  "version": "4.1.0",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone"],
  "background_color": "#ffffff",
  "theme_color": "#3b82f6",
  "orientation": "portrait-primary",
  "categories": ["education", "productivity", "lifestyle", "games"],
  "lang": "en-US",
  "dir": "ltr",
  "scope": "/",
  "id": "adhd-learning-rpg",
  "icons": [
    {
      "src": "/icon.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/favicon.ico",
      "sizes": "64x64 32x32 24x24 16x16",
      "type": "image/x-icon"
    }
  ],
  "shortcuts": [
    {
      "name": "Quick Study Session",
      "short_name": "Study",
      "description": "Start a study session immediately",
      "url": "/?action=quick-study",
      "icons": [
        {
          "src": "/icon.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "View Analytics",
      "short_name": "Analytics",
      "description": "Check your learning progress and statistics",
      "url": "/?view=stats",
      "icons": [
        {
          "src": "/icon.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "My Profile",
      "short_name": "Profile",
      "description": "View achievements and level progress",
      "url": "/?view=profile",
      "icons": [
        {
          "src": "/icon.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Set Goals",
      "short_name": "Goals",
      "description": "Manage your learning goals",
      "url": "/?view=goals",
      "icons": [
        {
          "src": "/icon.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-new"
  },
  "protocol_handlers": [
    {
      "protocol": "web+adhdlearning",
      "url": "/?protocol=%s"
    }
  ],
  "share_target": {
    "action": "/share-target/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["text/plain", ".txt", ".md", ".csv"]
        }
      ]
    }
  }
}
